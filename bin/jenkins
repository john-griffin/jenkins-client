#!/usr/bin/env ruby

# heavily based on the Heroku client gem

# return a nicer message from ctrl-c
trap("INT") do
  puts("\n !    Aborted.")
  exit
end

# resolve bin path, ignoring symlinks
require "pathname"
bin_file = Pathname.new(__FILE__).realpath

# add self to libpath
$:.unshift File.expand_path("../../lib", bin_file)

# start up the CLI
require "jenkins-client/cli"
Jenkins::Client::CLI.start(*ARGV)

